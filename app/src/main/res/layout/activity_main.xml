<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gifimage"
        android:scaleType="centerCrop"
        android:background="@null"
        android:alpha="0.7"
        android:src="@drawable/mb"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/sleep_gif"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="200dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/sleep"/>


    <EditText
        android:id="@+id/et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sleep_gif"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="68dp"
        android:layout_toLeftOf="@+id/sleep_gif"
        android:layout_toStartOf="@+id/sleep_gif"
        android:ems="10"
        android:hint="Enter Name" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et"
        android:layout_alignEnd="@+id/sleep_gif"
        android:layout_alignRight="@+id/sleep_gif"
        android:text="Click"
        android:onClick="click"/>

</RelativeLayout>